PG_PASS={{ authentik_authentik.postgres_password }}
AUTHENTIK_SECRET_KEY={{ authentik_authentik.secret_key }}
AUTHENTIK_ERROR_REPORTING__ENABLED=true
# SMTP Host Emails are sent to
AUTHENTIK_EMAIL__HOST={{ authentik_authentik.email.host }}
AUTHENTIK_EMAIL__PORT={{ authentik_authentik.email.port }}
# Optionally authenticate (don't add quotation marks to your password)
AUTHENTIK_EMAIL__USERNAME={{ authentik_authentik.email.username }}
AUTHENTIK_EMAIL__PASSWORD={{ authentik_authentik.email.password }}
# Use StartTLS
AUTHENTIK_EMAIL__USE_TLS=true
# Use SSL
AUTHENTIK_EMAIL__USE_SSL=false
AUTHENTIK_EMAIL__TIMEOUT=10
# Email address authentik will send from, should have a correct @domain
AUTHENTIK_EMAIL__FROM={{ authentik_authentik.email.from }}

AUTHENTIK_TAG="{{ authentik_authentik.tag }}"
